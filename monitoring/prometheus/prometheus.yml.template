global:
  scrape_interval: 15s
  evaluation_interval: 30s
  scrape_timeout: 10s

rule_files:
  - /etc/prometheus/alerts.yml

scrape_configs:
  - job_name: "twiga-app"
    metrics_path: "/metrics"
    static_configs:
      - targets: ["${TWIGA_METRICS_TARGET}"]

  - job_name: "redis-exporter"
    static_configs:
      - targets: ["${REDIS_EXPORTER_TARGET}"]
